<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="d-flex justify-content-center mt-5 align-items-center">
                        <h2 class="text-center mb-5 mt-5">You are not authorized</h2>
                        <MudButton StartIcon="@Icons.Filled.Login" Variant="Variant.Filled" 
                            Color="Color.Success" Href="login" FullWidth="false" Class="ml-3">Login</MudButton>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <h1>Sorry, there's nothing at this address.</h1>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>